<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizChoicesActivity"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="User, which quiz would you like to take?"
        android:textColor= "@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_flag_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/white"
        android:text="@string/flag_quiz_title"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_capital_cities_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/white"
        android:text="@string/capital_cities_quiz_title"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_country_outline_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/white"
        android:text="@string/country_outline_quiz_title"
        android:textColor="@color/black"
        android:textStyle="bold" />

</LinearLayout>